# Navigate to your repository directory
cd budget-tracker-landing-page

# Set repository-specific git configuration
git config user.name "akingundogdu"
git config user.email "your-email@example.com"

# Verify the configuration
git config --local -l 

mkdir src
touch README.md src/App.tsx src/main.tsx index.html 

# Initialize git repository (if not already initialized)
git init

# Add all files
git add .

# Create initial commit
git commit -m "Initial commit: Basic project structure"

# Add remote repository (if not already added)
git remote add origin https://github.com/akingundogdu/budget-tracker-landing-page.git

# Push to main branch
git push -u origin main 

npm init -y 

npm install react react-dom typescript @types/react @types/react-dom
npm install --save-dev vite @vitejs/plugin-react 